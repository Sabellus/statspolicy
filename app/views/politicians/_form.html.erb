<%= form_for(@politician, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @politician.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@politician.errors.count, "error") %> prohibited this politician from being saved:</h4>

      <ul>
      <% @politician.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

      <%= f.label :last_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

  </div>
  <div class="form-group">

      <%= f.label :first_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

  </div>
  <div class="form-group">

      <%= f.label :middle_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :middle_name, class: "form-control" %>
      </div>

  </div>
  <div class="form-group">
    <%= f.label :territory_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :territory_id, Territory.order(:name), :id, :name, { include_black: true }, class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
