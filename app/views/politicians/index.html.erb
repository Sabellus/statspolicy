<div class="page-header">
  <%= link_to new_politician_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Politician
  <% end %>
  <h1>Listing politicians</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Last name</th>
            <th>First name</th>
            <th>Middle name</th>
            <th>Territory</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @politicians.each do |politician| %>
        <%= content_tag :tr, id: dom_id(politician), class: dom_class(politician) do %>
                      <td><%= politician.last_name %></td>
                      <td><%= politician.first_name %></td>
                      <td><%= politician.middle_name %></td>
                      <td><%= politician.territory.name %></td>
                    <td><%= link_to 'Show', politician %></td>
          <td><%= link_to 'Edit', edit_politician_path(politician) %></td>
          <td><%= link_to 'Destroy', politician, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
