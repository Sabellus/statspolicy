<%= form_for(@interviewee, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @interviewee.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@interviewee.errors.count, "error") %> prohibited this interviewee from being saved:</h4>

      <ul>
      <% @interviewee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

      <%= f.label :last_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

  </div>
  <div class="form-group">

      <%= f.label :age, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :age, ['меньше 20', 'от 20 до 40', 'от 40 до 60', 'старше 60'], { include_black: true }, class: "form-control"%>
      </div>

  </div>
  <div class="form-group">

      <%= f.label :sex, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :sex, ['Мужской', 'Женский'], { include_black: true }, class: "form-control"%>
      </div>

  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
