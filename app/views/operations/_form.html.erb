<%= form_for(@operation, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @operation.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@operation.errors.count, "error") %> prohibited this operation from being saved:</h4>

      <ul>
      <% @operation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>

  </div>

  <div class="form-group">

      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :description, class: "form-control" %>
      </div>

  </div>
  <div class="form-group">
    <%= f.label :politician_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :politician_id, Politician.order(:last_name), :id, :last_name, { include_black: true }, class: "form-control"%>
    </div>
  </div>
  <div class="form-group">

      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label>
            <%= f.check_box :success %>
            Success
          </label>
        </div>
      </div>

  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
