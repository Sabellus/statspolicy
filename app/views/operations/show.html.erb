<div class="page-header">
  <%= link_to operations_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_operation_path(@operation), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show operation</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @operation.name %></dd>

  <dt>Desciption:</dt>
  <dd><%= @operation.description %></dd>

  <dt>Politician:</dt>
  <dd><%= @operation.politician.last_name %></dd>

  <dt>Success:</dt>
  <dd><%= @operation.success %></dd>


</dl>
