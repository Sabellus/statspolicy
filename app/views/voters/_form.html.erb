<%= form_for(@voter, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @voter.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@voter.errors.count, "error") %> prohibited this voter from being saved:</h4>

      <ul>
      <% @voter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

      <%= f.label :last_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

  </div>
  <div class="form-group">

      <%= f.label :sex, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :sex, class: "form-control" %>
      </div>

  </div>
  <div class="form-group">
    <%= f.label :age, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :age, [[0, 'от 20'],[1,'от 20 до 40'], [2,'от 40 до 60'], [3,'от 60']], :first, :last, { include_black: true }, class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
